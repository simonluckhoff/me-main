---
import Image from "astro/components/Image.astro";
import Layout from "../layouts/Layout.astro";
import { latestWork } from "../work";
import { recentWork } from "../work";
---

<Layout title="Work">
	<div class="heading">
		<h1>Latest Work</h1>
	</div>

	<div class="layout-latestwork">
		{
			latestWork.map((item) => {
				return (
					<a href={item.href}>
						<div class="card-item">
							<div class="image">
								<Image class="img" src={item.image} alt={item.title} />
								<div class="overlay overlay-blur">
									<div class="image-title">{item.title}</div>
								</div>
							</div>
						</div>
					</a>
				);
			})
		}
	</div>

	<div class="heading-recentwork">
		<h1>Recent Work</h1>
	</div>

	<div class="layout-recentwork">
		{
			recentWork.map((item) => {
				return (
					<a href={item.href}>
						<div class="card-item">
							<div class="image">
								<Image src={item.image} alt={item.title} />
								<div class="overlay overlay-blur">
									<div class="image-title">{item.title}</div>
								</div>
							</div>
						</div>
					</a>
				);
			})
		}
	</div>
</Layout>

<style>
	.heading {
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		padding: 30px 50px 30px 50px;
		padding-top: 80px;
	}

	.layout-latestwork {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		justify-content: center;
		margin: 0% 3% 3% 3%;
		gap: 25px;
		padding-bottom: 15px;

		.card-item:hover {
			transform: scale(1.03);
			transition: ease-out.2s;
		}

		img {
			width: 100%;
			max-width: 410px;
			height: auto;
		}
	}

	.heading-recentwork {
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		background-color: black;
		padding: 30px 50px 10px 50px;
	}

	.layout-recentwork {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		justify-content: center;
		padding: 30px 50px 30px 50px;
		gap: 25px;
		background-color: black;

		img {
			width: 100%;
			/* max-width: 410px; */
			max-width: 385px;
			height: auto;
		}

		.card-item:hover {
			transform: scale(1.03);
			transition: ease-out.2s;
		}
	}

	.image {
		position: relative;
	}

	.overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 99%;
		background: rgba(0, 0, 0, 0.6);
		color: white;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		opacity: 0;
		transition: opacity 0.25s;
	}

	.overlay-blur {
		backdrop-filter: blur(3px);
	}

	.image-title {
		padding-top: 15px;
		font-size: 1.5rem;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.overlay:hover {
		opacity: 1;
	}

	@media (max-width: 800px) {
		.heading {
			padding-top: 85px;
		}

		.layout-latestwork img {
			width: 100%;
			max-width: 300px;
			height: auto;
		}
	}
</style>
